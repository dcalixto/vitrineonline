<%= form_for @product, method: :put, url: wizard_path do |p| %>

<div class="block">
<h1>Imagens e especifiações</h1>
  <div class="content">
      <div class="subcontent_top">

        <h4>Fotos</h4>
    <div class="product_img">
      <!-- Fotos  -->
      <ul>
        <li>
          <div id="upload-f1-container"></div>
        </li>
        <li>
          <div id="upload-f2-container"></div>
        </li>
        <li>
          <div id="upload-f3-container"></div>
        </li>
        <li>
          <div id="upload-f4-container"></div>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>

    <p class="tip">Adicione no mínimo 2 fotos</p>
    <p class="tip">
      Se você tem dúvida de como tirar suas fotos acesse o link
      <%= link_to 'Fotografia', page_path('fotografia') %></p>
  </div>

  <div class="subcontent">
    <h4>Estilos</h4>
    <p class="tip">Os estilos facilitam o google e bing a achar de seu produto com mais facilidade
    </p>

    <%= p.text_field :tag_list,
                 :id => "product_tags",
                 "data-pre" => @product.tags.map(&:attributes).to_json %>
  </div>



  <div class="subcontent">
  <h4>Especificação</h4>

    <span>
      <b>Tamanho</b>
    </span>
    <%= hidden_field_tag "product[size_ids][]", nil %>
    <% Size.order(:size).each do |size| %>
    <%= check_box_tag "product[size_ids][]", size.id, @product.size_ids.include?(size.id), id: dom_id(size) %>
    <%= label_tag dom_id(size), size.size %><br>
    <% end %>
    <span>
      <b>Cor</b>
    </span>
    <%= hidden_field_tag "product[color_ids][]", nil %>
    <% Color.all.each do |color| %>
    <%= check_box_tag "product[color_ids][]", color.id, @product.color_ids.include?(color.id), id: dom_id(color) %>
    <%= label_tag dom_id(color), color.name %><br>
    <% end %>
    <ul>
      <b>Material</b>&nbsp;
      <%=  p.collection_select :material_id, Material.all, :id, :name %>
    </li>
    <li>
      <b>Condição</b>&nbsp;
      <%=  p.collection_select :condition_id, Condition.all, :id, :name %>
    </li>
    <li>
      <b>Marca</b>&nbsp;
      <%=  p.collection_select :brand_id, Brand.all, :id, :name %>
    </li>
  </ul>
</div>
</div>
<p>
  Adicione apenas as medidas pertinente ao produto OBS: Todas as medidas serão em Centímetros Comprimento: 67,5cm
</p>
</div>



<%= p.submit 'Vender', :class =>"btn_orange btn_big" %>
<% end %>
