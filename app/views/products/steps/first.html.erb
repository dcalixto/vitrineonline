<% title "Editar #{@product.name}" %>


<%= render "shared/vitrine_menu" %>

<div class="box5" >
<%= render 'shared/flash_messages' %>
<%= render 'shared/error_messages', :target => @product %>

<%= semantic_form_for @product  do |p| %>
<%= p.inputs do %>

<!-- Categoria -->


<!-- Seção-->
<div class="content margin_top">
  <h4>
<%= link_to @product.name, product_path(@product) %>
</h4>

<div class="block">
  <h4>Estilos</h4>
  <p>Os estilos facilitam o google e bing a achar de seu produto com mais facilidade
  </p>

  <%= p.text_field :tag_list,
               :id => "product_tags",
               "data-pre" => @product.tags.map(&:attributes).to_json %>
</div>






<div class="subcontent">

  <h4>Especificações</h4>

     <span><b>Tamanho</b></span>




     <%= hidden_field_tag "product[size_ids][]", nil %>
     <% Size.all.each do |size| %>
     <%= check_box_tag "product[size_ids][]", size.id, @product.size_ids.include?(size.id), id: dom_id(size) %>
     <%= label_tag dom_id(size), size.size %><br>
     <% end %>


     <span><b>Cor</b></span>
     <%= hidden_field_tag "product[color_ids][]", nil %>
     <% Color.all.each do |color| %>
     <%= check_box_tag "product[color_ids][]", color.id, @product.color_ids.include?(color.id), id: dom_id(color) %>
     <%= label_tag dom_id(color), color.name %><br>
     <% end %>
     <ul>
     <b>Material</b>&nbsp;
     <%=  p.collection_select :material_id, Material.all, :id, :name %>
     </li>
     <li>
        <b>Condição</b>&nbsp;
        <#%=  p.collection_select :condition_id, Condition.all, :id, :name %>
     </li>
   </div>





  <div class="content">

<%= p.input :quantity, :label =>"Quantidade", :as => :number %>
<span><b>Tamanho</b></span>
<%= p.input :sizes, :as => :check_boxes,  :collection => Size.select('id, size as name'), :label => '' %>
<span><b>Cor</b></span>
<%= p.input :colors, :as => :check_boxes, :collection => Color.order(:name), :label => '' %>
 <%= p.actions do %>
        <%= p.action :submit, :label => "Atualizar", :button_html => { :class => "btn"} %>
      <% end %>
    <% end %>
   <% end %>

</div>
</div>
