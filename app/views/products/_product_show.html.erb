
<div class="content">



  <div class="subcontent_top">


    <ul>

      <% unless @product.images.blank? %>
        <%  @product.images.offset(4).each do |i| %>
          <li>
           


 <a href="<%= i.ifoto.url.to_s %>"> 
        <%= image_tag(i.ifoto.url(:big).to_s) %>
    </a> 

          </li>
        <% end %>

      <% end %>
    </ul>
  </div>



  <div class="subcontent">

    <h2>Clientes que viram este produto também viram</h2>



       <%= render :partial => 'shared/suggestion'%>




  </div>














  <div class="subcontent">
    
<hr class="line"></hr>


    <h2>Descrições do Produto</h2>
    <p><% if @product.detail.present? %>
    <%= markdown(@product.detail) %>
  <% end %></p>
  </div>



  <div class="subcontent">
    
<hr class="line"></hr>


    <h2>Detalhes do produto</h2>
    <div class="left_info">
      <ul>
        <% if @product.condition.present? %>
          <li>
            <span>Condição:
            </span>
            <b><%= @product.condition.condition%></b>
          </li>
        <%end %>
        <% if @product.material.present? %>

          <li>
            <span>Material:</span>
            <b><%= @product.material.name %></b>
          </li>
        <% end %>


        <% if @product.brand.present? %>

          <li>
            <span>Marca:</span>
            <b><%= @product.brand.name%></b>
          </li>
        <% end %>

  <% if @product.height.present? %>

          <li>
            <span>Altura:</span>
               <b><%= @product.height%></b>

          </li>
            <% end %>

     <li>


   
     
  <% if @product.width.present? %>

          <li>
            <span>Largura:</span>
               <b><%= @product.width%></b>

          </li>
            <% end %>

     
     
     
     </li>

    <li>
  
    
  <% if @product.diamenter.present? %>

          <li>
            <span>Diâmetro:</span>
               <b><%= @product.diamenter%></b>

          </li>
            <% end %>

    
    
    
    </li>

 <li>
 
 
 
  <% if @product.length.present? %>

          <li>
            <span>Comprimento:</span>
               <b><%= @product.length%></b>

          </li>
            <% end %>

 
 </li>

    <li>



  <% if @product.weight.present? %>

          <li>
            <span>Peso:</span>
               <b><%= @product.weight%></b>

          </li>
            <% end %>




      </ul>

    </div>


  </div>



  <div class="subcontent">

<hr class="line"></hr>


    <h2>Formas de Pagamento</h2>

    <%= link_to  "https://www.paypal.com/br"  do %>

      <%= content_tag(:span, nil, :class => 'sprite-icons-paypal-icon') %>
    <% end %>

    <% unless @product.vitrine.policy.blank? %>
    <% end %>

  </div>

  <div class="subcontent">

<hr class="line"></hr>


    <h2>Formas de Envio</h2>

    <ul>

      <li>
        <%= content_tag(:span, nil, :class => 'sprite-icons-shipping') %>
      </li>

      <% @product.vitrine.policy.shippings.each do |shipping| %>
        <li>
          <b><%= shipping.kind %></b>
        </li>
      <% end %>
    </ul>

  </div>

  <div class="subcontent">

<hr class="line"></hr>


    <h2>Garantias do Vendedor </h2>

    <p><%= markdown(@product.vitrine.policy.guarantee) %></p>
    <% unless @product.vitrine.policy.shippings.blank? %>
    <% end %>

  </div>

  <div class="subcontent">

<hr class="line"></hr>


    <h2>Avaliação dos usuários</h2>


<div class="content">

  <table class="blank_table">
    <tr>

         <td>
        <b>Produto Adicionado em:</b>
        <span class="lista-time">
          <%= timeago_tag(@product.created_at, :nojs => true, :date_only => false)%>

        </span>
         </td>
            <td>
 <%=link_to  probacks_product_path(:id=> @product.id)  do %>
        <b>Média de Avaliações</b><div class="feedback_stars_rating" data-read-only="true" data-score="<%= @product.average_rating %>"></div>
      <% end %>
      </td>

    </tr>
  </table>


  <table class="block_search">
    <tr>
     
      <td>

        <%= render :partial => 'shared/sort_proback'%>
      </td>
         

    </tr>
  </table>

  <%= render :partial => 'probacks/probacks' %>


</div>


   

  </div>






</div>


