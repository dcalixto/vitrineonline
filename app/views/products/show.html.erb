<% title @product.name%>
<%description @product.name  %>
<% keywords  @product.tag_list %>

<div class="box1">
  <% breadcrumb :product, @product %>



  <div class="margin_top">
    <%= render 'shared/flash_messages' %>

  </div>
</div>

<!-- Imagens do product   -->

<div class="box9">

  <div id="placeholder">
<% if @product.images.present? %>
    <%= image_tag @product.images.first.url(:big).to_s, :id => 'mainImage', :class=>"circle" %>
    <%= render_showcase %>
    <% end %>
  </div>

</div>

<div class="box9">
  <div class"content">


      <div>
        <h1 id="item_name"><%= @product.name %></h1>
      </div>
      <div>
<ul>
    <li>   <%= content_tag(:span, nil, :class =>"sprite-icons-small_vitrine") %>
        <%=link_to @product.vitrine.name, vitrine_path(@product.vitrine),  :title => "Nome" %>
      </li>
      <li>
       <% if @product.vitrine.user.online? == true %>
          <span class="status_online"> Online </span>
          <% else %>
            <span class="status_offline"> Offline </span>
            <% end %>
</li>
</ul>
      </div>


      <!-- Fim-->

      <!--Descrição   -->
    <ul>
      <% if @product.vitrine.feedbacks %>

      <%=link_to  feedbacks_product_path(:id=> @product.id)  do %>

      <li>
        <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>">
          <span class="feedCounter"><%= @total_feedbacks %>
            Avaliações</span>
        </div>

      </li>
      <% end %>

      <% end %>

      <li>
        <hr class="line"></hr>

        <span>Preço:
          <strong><%= number_to_currency(@product.price, :unit => "R$") %></strong></span>
      </li>


      <li>

        <span>Disponíveis:
          <strong><%= @product.quantity%></strong>
        </span>
      </li>



      <% @product.vitrine.policy.shippings.each do |shipping| %>
      <li>
        <span>Envio:
          <strong><%= shipping.kind %>
          </strong></span>
      </li>
      <% end %>



          <span class="span">ID</span>
          <b class="span">
            #<%= @product.id %></b>
        </li>
        <li>
          Site:
          <% if @product.vitrine.marketing.url%>
        <%=link_to  "#{@product.vitrine.marketing.url}", url_with_protocol(@product.vitrine.marketing.url), :target => '_blank' %>
        <% end %>
        </li>



    </ul>


  </div>

  <div class="content">
    <%= link_to  "https://www.paypal.com/br"  do %>

    <%= content_tag(:span, nil, :class => 'sprite-icons-paypal_protect') %>

    <% end %>

    Saiba mais em:
    <%= link_to nil, "https://www.paypal.com/br/webapps/mpp/paypal-safety-and-security" %>
  </div>

</div>


<div class="box10">
  <%= social_share_button_tag(truncate(@product.vitrine.name, :length => 20), :url => url_for(:action => :show, :id => @product.vitrine.id, :only_path => false))  %>

<%= form_tag buy_now_to_carts_path(@product) do %>
  <div class="block">

    <div class="tip_box">
    <div class="content">

      <ul>
        <li>

          <h3 id="item_price"><%= number_to_currency(@product.price, :unit => "R$") %></h3>
        </li>

      </ul>

      <div class="left_info item_information">
        <ul>
          <li >
            <b>Quantidade</b>&nbsp;

            <%= select_tag  :quantity, options_for_select((1..@product.quantity).collect{ |q| [q, q]}) %>

          </li>
          <li >
            <b>Cor</b>&nbsp;

            <%= select_tag :color_id, options_for_select(@colors_for_dropdown.unshift(['Selecionar Cor', nil])) %>

          </li>
          <li>
            <b>Tamanho</b>&nbsp;

            <%= select_tag :size_id, options_for_select(@sizes_for_dropdown.unshift(['Selecionar Tamanho', nil]))%>

          </li>


        </ul>



      </div>




      <div class="horizontal_buttons">
        <ul>
          <li>

            <% if current_user %>
            <%if @product.buyable?(current_user) %>

            <div class="buy_now">

              <%= button_to( "Comprar", buy_now_to_carts_path(@product), :class => 'btn_orange  btn_big', :'data-submit-form' => true)  %>

            </div>

          </li>

          <li>

            <div class="add_to_car">

              <%= button_to("Adicionar a sacola",add_to_carts_path(@product), :class => 'btn btn_big', :'data-submit-form' => true) do %>

              <%= content_tag(:i, nil, :class=>"add_to_cart_icon")  %>
              <%end %>

            </div>

            <%end %>

            <%end %>

          </li>
        </ul>

      </div>
    </div>

  </div>

    </div>

 <% end %>
  <!-- Fim-->
</div>



  <div class="box3">
    <div class ="block">

      <%= bettertabs :simpletabs do |tab| %>
        <%= tab.link :product_show, 'Resumo' do %>
        <%= render 'product_show' %>
    <% end %>
        <%= tab.link :feedbacks, "#{pluralize(@product.feedbacks.size, "Avaliações") }"  do %>
        <%= render 'feedbacks' %>
        <% end %>

        <%= tab.link :message, 'Mensagem' do %>
        <%=render 'message_box' %>
        <% end %>

        <%= tab.link :styles, 'Estilos' do %>
        <%=render 'products/tags' %>
        <% end %>
      <% end %>
    </div>


  </div>

</div>
    </div>
