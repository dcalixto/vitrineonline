<% title @product.name%>
<%description @product.probacks  %>
<% keywords  @product.probacks %>

<div class="box3">
  <div class="block margin_top">
    <h1>Avaliações</h1>
    <div class="content">

    <table>
      <tbody>
      <tr>
        <td>
  
        </td>
        <td>

    <%= link_to  product_path(@product.id)  do %>
  
      <%= image_tag(@product.images.first.ifoto.url(:thumb).to_s) %>
    <% end%>
        </td>
        <td>

          <b>Produto Adicionado em: </b>
 <span class="lista-time">
           <%= timeago_tag(@product.created_at, :nojs => true, :date_only => false)%>
  
    
    
    </span>

        </td>
        <td>
          <b>Vitrine:</b>
           <%= link_to  vitrine_path(@product.vitrine.id)  do %>
              <%= @product.vitrine.name %>
      <% end%>

        </td>
        
        <td>
            <b>Média de Avaliações</b>
    <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @product.average_rating %>"></div>

        </td>
      </tr>
      </tbody>
    </table>








    <table class="block_search">
      <tr>
        

        <td class="sort">

          Ordernar por
          <%= sort_link @q, :created_at, "Data" %>
          |
          <%= sort_link @q, :proback_stars_rating, "Avaliação" %>
        </td>
        

      </tr>
    </table>
      <%= render :partial => 'probacks/probacks' %>

  </div>

 <%= render :partial => 'shared/proback_pagination'%>

</div>

</div>
</div>

