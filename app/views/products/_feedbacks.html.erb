
<div class="content">

  <h1>Avaliações</h1>

  <div class="subcontent">
    <table>
      <tbody>
      <tr>
        <td>
    <%= link_to  product_path(@product.id) do %>
      <% if @product.images.present? %>
        <%= image_tag @product.images.first.ifoto.url(:thumb).to_s %>
      <% end %>
    <% end %>
        </td>
        <td>

    <%= link_to  product_path(@product.id)  do %>
      <%= @product.name %>
    <% end%>
        </td>
        <td>
  <ul>
    <li class="lista-time">
      <%= link_to  vitrine_path(@product.vitrine.id)  do %>
        Por
        <%= @product.vitrine.name %>
      <% end%>
      <%= timeago_tag(@product.created_at, :nojs => true, :date_only => false)%>
  
    
    
    </li>
    </ul>
        </td>
      </tr>
      </tbody>
    </table>

  </div>


 
  <table class="block_search">
    <tr>

    <%= render :partial => 'shared/sort_feedback'%>

    </tr>
  </table>

  <b>Média de Avaliações</b><div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

  <%= render :partial => 'feedbacks/feedbacks' %>



  <div class="block_pagination">
    <div class="digg_pagination">
      <%= will_paginate @feedbacks,:container => false, previous_label: h('« Voltar'), next_label: h('Próximo »'),:page_gap => "......", :inner_window => 1, :outer_window => 1 %>

    </div>
  </div>

</div>


