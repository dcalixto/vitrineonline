<div class="box3">
  <div class="block margin_top">
    <h1>Avaliações</h1>

    <div class="content">
      <div class="subcontent_top">
        <%= link_to  user_path(@user.id) do %>
        <%= image_tag @user.avatar.url(:mobile).to_s %>
        Criado em:
        <%= timeago_tag(@user.created_at, :nojs => true, :date_only => false)%>
        <% end %>

      </div>
      <% if @user.vitrine  %>

      <div class="subcontent">
      <li class="lista-time">
        <%= link_to  vitrine_path(@user.vitrine.id)  do %>

        <%= image_tag @user.vitrine.logo.url(:mobile).to_s %>
        <% end%>
        Criada em:
        <%= timeago_tag(@user.vitrine.created_at, :nojs => true, :date_only => false)%>

      </li>
    </div>
    <% end%>

    <table class="block_search">
      <tr>
       
        <td class="sort">

          Ordernar por
          <%= sort_link @q, :created_at, "Data" %>
          |
          <%= sort_link @q, :feedback_stars_rating, "Avaliação" %>
        </td>
      </tr>
    </table>

    <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_sellers %>"></div>

    <%= render :partial => 'feedbacks/feedbacks' %>

  </div>

  <div class="block_pagination">
    <div class="digg_pagination">
      <%= will_paginate @feedbacks,:container => false, previous_label: h('« Voltar'), next_label: h('Próximo »'),:page_gap => "......", :inner_window => 1, :outer_window => 1 %>

    </div>
  </div>

</div>

</div>
</div>
