<% title  "Criar Conta"  %>

<!--MARKETING  -->
<div class="box12">
     </div>
  

<div class="box8">
  <div class="margin_top" id="marketing">
    <h1>A Vitrineonline ajudará você a:</h1>
    <ul>
      <li><%=content_tag(:span, nil)%>Montar sua vitrine e poste seus produtos sem custo</li>
    </ul>
    <ul>
      <li><%=content_tag(:span, nil)%>Estilizar e administrar sua vitrine com facilidade</li>
    </ul>
    <ul>
      <li><%=content_tag(:span, nil)%>Ter exposição 24hrs por dia além da capacidade de criar e fortalecer sua marca</li>
    </ul>
  </div>
</div>

<!--USER CREATE  -->
<div class="box8">

  <%= render 'shared/error_messages', :target => @user %>

  <div class="block margin_top">
    <h1>Criar Conta
    </h1>
  <div class="content">


    <%= semantic_form_for(@user)  do |f| %>
    <%= f.inputs do %>
    <%= f.input :name,  :label => "Nome",:required=>true %>
    <%= f.input :surname, :label => "Sobrenome", :required=>true %>

    <%= f.input :email, :as => :email, :label => "Email",:required=>true %>
    <%= f.input :password, :as => :password, :label =>  "Password", :required=>true %>

    <%= f.input :password_confirmation, :as => :password, :label => "Confirmar Password", :required=>true   %>

    <%= f.input :gender, :as => :radio, :label => false,
        :collection => [["Masculino", "M"], ["Feminino", "F"], ["Prefiro não dizer", "I"]], :required=>true %>

    <div class="acordo">
      <p>Clicando em criar conta você estará aceitando nossos
        <%= link_to 'Termos e Condições', page_path('termos') %>, nossa
        <%= link_to 'Políticas de Privacidade', page_path('privacidade')%>
        e declarando que tem ao menos 18 anos de idade.</p>
    </div>

    <%= f.actions do %>
    <%= f.action :submit, :label => "Criar Conta", :button_html => { :class => "btn_orange btn_big"} %>
    <% end %>
    <% end %>
    <% end %>
  </div>
  </div>
</div>
