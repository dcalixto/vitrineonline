<% title @user.name %>
<div class="box1">
  <% breadcrumb :user, @user %>
  <%=render 'shared/flash_messages' %>
</div>
<div class="box10">

  <div class="block margin_top">
  <div class="content">
    <%=link_to(image_tag(@user.avatar.url(:thumb).to_s), user_path(@user)) %>
    <ul class="list">
      <li>
        <h1>
          <%=link_to user_path(@user) do %>
          <%=@user.name %>
          <%=@user.surname %>
          <% end %>
        </h1>
      </li>
      <% if @user.city%>
      <li>
        <span><%=@user.city.name %>,</span>
        <% end %>
        <% if @user.state%>
        <b>
          <%=@user.state.code %>
        </b>
      </li>
      <% end %>
      <li>
        <% if @user.feedbacks %>

        <%=link_to  feedbacks_user_path(:id=>@user.id)  do %>
        <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_sellers %>">
          <span class="feedCounter"><%=@total_from_sellers %></span>
        </div>
<% end %>
<% end %>
      </li>
    </ul>

    <div class="divider_bottom"></div>

    <h4>Vitrine</h4>

    <%=link_to(image_tag(@user.vitrine.logo.url(:thumb).to_s), vitrine_path(@user.vitrine)) %>
  </div >

</div>
</div>



<div class="box4">
  <div class="block margin_top">
    <h4>Avaliação</h4>
    <div class="content">
      <table class="block_search">
        <tr>
          <td>

            <%= search_form_for @q, url: feedbacks_search_users_path, method: :post  do |f| %>

            <%= f.text_field :id_cont %>
            <%= f.submit "Buscar", :class=>"btn_grey" %>

            <% end %>
          </td>
          <td class="sort">

            Ordernar por
              <%= sort_link @q, :created_at, "Data" %>
            |
            <%= sort_link @q, :feedback_stars_rating, "Avaliação" %>
          </td>
        </tr>
      </table>


      <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_sellers %>"></div>
      <%= render :partial => 'feedbacks/feedbacks' %>
    </div>
  </div>
</div>
