<% title @user.name %>
<div class="box1">
  <% breadcrumb :user, @user %>
  <%=render 'shared/flash_messages' %>
</div>
<div class="box10">

  <div class="block margin_top">
  <div class="content">
    <%=link_to(image_tag(@user.avatar.url(:thumb).to_s), user_path(@user)) %>
    <ul class="list">
      <li>
     <%= content_tag(:span, nil, :class =>"sprite-icons-small_avatar") %>
          <%=link_to user_path(@user) do %>
          <%=@user.name %>
          <%=@user.surname %>
          <% end %>

      </li>
      <% if @user.city%>
      <li>
        <%= content_tag(:span, nil, :class =>"sprite-icons-location") %>
        <span><%=@user.city.name %>,</span>
        <% end %>
        <% if @user.state%>
        <b>
          <%=@user.state.code %>
        </b>
      </li>
      <% end %>
      <li>
        <% if @user.feedbacks %>

        <%=link_to  feedbacks_user_path(:id=>@user.id)  do %>
        <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_sellers %>">  </div>
              <div><%=@total_from_sellers %></div>
<% end %>
<% end %>
      </li>
<% if @user.vitrine %>
  <%= content_tag(:span, nil, :class =>"sprite-icons-small_vitrine") %>
      <li> <%=link_to @user.vitrine.name, vitrine_path(@user.vitrine) %>
      <%end %>
      <li>
      <%= social_share_button_tag(truncate(@user.name, :length => 20), :url => url_for(:action => :show, :id => @user.id, :only_path => false))  %>
    </li>

<li> <% if @user.online? == true %>
  <span class="status_online"> Online </span>
  <% else %>
    <span class="status_offline"> Offline </span>
    <% end %>
</li>

    </ul>

 </div>


</div>
</div>



<div class="box4">
  <div class="block margin_top">
    <h4>Avaliações</h4>
    <div class="content">
      <table class="block_search">
        <tr>
          <td>

            <%= search_form_for @q, url:  feedbacks_users_path, method: :post  do |f| %>

            <%= f.text_field :id_cont %>
            <%= f.submit "Buscar", :class=>"btn_grey" %>

            <% end %>
          </td>
          <td class="sort">

            Ordernar por
              <%= sort_link @q, :created_at, "Data" %>
            |
            <%= sort_link @q, :feedback_stars_rating, "Avaliação" %>
          </td>
        </tr>
      </table>


      <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_sellers %>"></div>
      <%= render :partial => 'feedbacks/feedbacks' %>
    </div>
  </div>
</div>
<div class="box1">
  <div class="block">
<div class="subcontent">
  <div class="block_message">

    <h2>Entrar em contato com o vendedor</h2>

    <% @conversation = Conversation.new %>

    <%= form_for @conversation do |f| %>

    <%= hidden_field :conversation_participants, :user_id, :value => @user %>
    <ul>
      <li><%= text_area :message, :body, class: 'form-control',data: { emojiable: true },:rows => 3 %></li>

    </ul>

    <%= f.button 'Enviar', :class => 'btn_grey' %>

    <% end %>

      </div>

    </div>
  </div>

</div>


<div class="box1">
  <div class="block">
    <h2>Veja Também</h2>


      <ul class="content-slider">

            <% @suggestions.each do |item| %>
              <li>
            <%= link_to product_path(item) do  %>
            <%= image_tag item.f1.url(:thumb).to_s %>
            <%= item.name %>
              <%= item.price %>
            <% end %>
            </li>
            <% end %>
  </ul>




  </div>

</div>
