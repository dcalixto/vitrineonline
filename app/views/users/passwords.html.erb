<% title  "Alterar Password" %>

<%= render "shared/user_menu" %>

<div class="box4">

  <div class="block">
    <%= render 'shared/flash_messages' %>
    <%= render 'shared/error_messages', :target => @password_form %>
    <div class="content">
      <h4>Alterar Password</h4>

      <%= semantic_form_for @password_form, url: passwords_user_path, method: :post  do |f| %>
      <%= f.inputs do %>
      <%= f.input :original_password,  :as => :password, :placeholder => "Password Atual", :label => false, :required=>true  %>

      <%= f.input :new_password, :as => :password, :placeholder => "Novo Password", :label => false,:required=>true %>
      <%= f.input :new_password_confirmation , :as => :password, :placeholder => "Confirmar", :label => false, :required=>true %>

      <%= f.actions do %>
      <%= f.action :submit, :label => "Confirmar", :button_html => { :class => "btn", :id => "password_submit"} %>
      <% end %>
      <% end %>
      <% end %>

    </div>
  </div>

</div>
<div class="box3">
  <div class="tip">
    <h4>Password</h4>
    <p>De preferência a um password alfanumérico</p>

  </div>

</div>
