<!-- User-nav -->
<div id="user_nav">

  <div class="user_nav_list">

    <ul class="bala">

      <li>
        <% if new_messages? %>
        <%= content_tag(:span, "#{num_new_messages}", :class => "alert" ) %>
        <%=link_to( conversations_path, :title => "Mensagem", :class =>"ttooltip",  :data => {:url => "/conversations/links"} ) do %>
        <%= content_tag( :i,nil, :class => "sprite-icons-message")  %>
        <%end%>

        <% else %>

        <%=link_to( conversations_path, :id => "menu-messages", :title => "Mensagem",  :class =>"ttooltip",  :data => {:url => "/conversations/links"} ) do %>

        <%= content_tag( :i,nil, :class => "message_icon")  %>

        <%end%>
        <% end %>
      </li>

      <li>
        <% if new_feedback? %>
        <%= content_tag(:span, "#{num_new_feedback}", :class => "alert") %>


            <%=link_to( awaiting_feedbacks_path,   :class =>"ttooltip", :data => {:url => '/feebacks/links'} ) do %>

            <%= content_tag( :i,nil, :class => "feedback_icon")  %>
            <%end%>
            <% else %>

            <%=link_to( completed_feedbacks_path, :class =>"ttooltip",  :data => {:url => '/feedbacks/links'} ) do %>

            <%= content_tag( :i,nil, :class => "feedback_icon")  %>
            <%end%>
            <% end %>
          </li>

          <li>

            <%=link_to(products_favorites_path, :title => "Favoritos", :class =>"ttooltip2") do %>
            <%= content_tag( :i,nil, :class => "favorite_icon")  %>
            <%end%>
          </li>
          <li >

            <% if current_vitrine %>
            <%=link_to( edit_vitrine_path(current_vitrine), :title => "Vitrine", :class =>"ttooltip2" ) do %>
            <%= content_tag( :i,nil, :class => "boutique_icon")  %>
            <%end%>
            <% else %>
            <%=link_to new_vitrine_path,:title => "Criar Vitrine",  :class =>"ttooltip2" do %>
            <%= content_tag( :i,nil, :class => "boutique_icon")  %>
            <%end%>
            <% end %>

          </li>

        </ul>

      </div>
    </div>
    <% if current_vitrine %>
    <div id="sell_button">
      <%= button_to "Vender", new_product_path,  :class => 'btn_orange btn_small', :method => "get"
  %>
    </div>

    <% end %>
