<%=content_tag( :i,nil, :class=> "sprite-icons-vitrine2") %>
<%end%>
<% else %>
<%=link_to new_vitrine_path,:title=> "Criar Vitrine" do %>
<%=content_tag( :i,nil, :class=> "sprite-icons-vitrine2") %>
