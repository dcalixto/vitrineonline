<%=content_tag( :i,nil, :class=> "sprite-icons-feedback2") %>
<%end%>
<% else %>
<%=link_to( completed_feedbacks_path, :title=> "Avaliações" ) do %>
<%=content_tag( :i,nil, :class=> "sprite-icons-feedback2") %>
<%end%>
<% end %>
</li>
