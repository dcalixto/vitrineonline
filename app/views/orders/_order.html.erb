              <span class="sendship_sent">Enviado</span>
            </li>
        




          <li>
            Enviado em:
            <b>
              <% if odata.transaction.present? %>

                <%= timeago_tag(odata.transaction.updated_at, :nojs => true, :date_only => true)%></b>
          <% end %>
     
          </li>

            <li>Rastreio:
              <b><%=odata.track_number %></b></li>

             </ul>
      </td>
    
  </tr>

</tbody>
<% end %> 





  
