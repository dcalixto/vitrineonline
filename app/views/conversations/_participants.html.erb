<% conversation.participants(:not => current_user).each do |user| %>

<li >
<div class="avatar">
  <%= link_to conversation_path(conversation.id), :class => "message_link conversation " do %>
  <%= image_tag user.avatar.url(:message).to_s %>
  <% end %>
</div>
<div class="chatboxmessagecontent">
  <%= link_to conversation_path(conversation.id),  :class => "message_link conversation" do %>

  <%= user.name %>
  <%= user.surname %>

  <p><%= conversation.display_message.body %></p>
  <% end %>
  <%= timeago_tag(conversation.created_at, :nojs => true, :date_only => false) %>
</div>
</li>

<% end %>
