<tr>
  <td class="stock_td">
    <%= link_to  product_path(product.id) do %>
      <%if product.images.present? %>
    <%= image_tag product.images.first.ifoto.url(:small).to_s %>
    <% end %>
    <%=  product.name %>
    <% end %>
  </td>

  <td><%= product.code %></td>
  <td class="lista-preco_stock">
    <span>
      <b><%=  number_to_currency(product.price, :unit => "R$") %></b>
    </span>
  </td>
  <td>
    <% if product.vitrine.policy %>

    <%= product.vitrine.policy.paypal%>
    <% end %>

  </td>

  <td>
    <ul>
      <% if product.vitrine.policy %>

      <% product.vitrine.policy.shippings.each do |shipping| %>
      <li><%= shipping.kind %></li>
      <% end %>
      <% end %>
    </ul>
  </td>

  <td>
    <% if product.quantity %>
    <%=product.quantity %>

    <% end %>

  </td>
  <td>
      <%=link_to  probacks_product_path(:id=> product.id)  do %>

                  <div class="feedback_stars_rating" data-read-only="true" data-score="<%= product.average_rating  %>">
                    <span class="feedCounter"><%= product.total_feedbacks %>
                    </span>
                  </div>

                <% end %>
  </td>
  <td>
    <%= timeago_tag(product.created_at, :nojs => true, :date_only => true)%>

  </td>
  <td><%= button_to  'Editar', edit_product_path(product), :class => 'btn_grey btn_small', :method => "get"  %></td>

  <td><%= button_to 'Remover', product_path(product), :data => { :confirm => 'Confirmar?' }, :action => "destroy",  :class => "btn_red btn_small", :method => :delete  %></td>

</tr>
