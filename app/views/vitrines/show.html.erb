<% title  @vitrine.name %>
<div class="container">

<div class="box1">
  <%= render 'shared/flash_messages' %>
  <div id="vitrine_header">
    <div id="vitrine_banner">

      <%= image_tag(@vitrine.marketing.banner.url(:thumb).to_s) %>
    </div>

    <div class="vitrine_logo-container">
      <div class="vitrine_logo">

        <%= image_tag(@vitrine.logo.url(:thumb).to_s) %>

      </div>
    </div>

    <div class="vitrine_header_share_links">
      <ul>
        <li>
           <%if @vitrine.marketing.facebook %>

          <%=link_to "https://www.facebook.com/#{@vitrine.marketing.facebook}" do %>
<%=content_tag(:span, nil, :class=>"social-share-button-facebook") %>
<% end %>
<% end %>

      
        
        </li>



   <li>
           <%if @vitrine.marketing.twitter %>

          <%=link_to "https://www.twitter.com/#{@vitrine.marketing.twitter}" do %>
<%=content_tag(:span, nil, :class=>"social-share-button-twitter") %>
<% end %>
<% end %>

      
        
        </li>

 


      </ul>
    </div>

    <div id="vitrine_header_info_links">
      <h2>

        <%=link_to vitrine_path(@vitrine) do %>
        <%=@vitrine.name %>
        <% end %>

      </h2>
      <p>
        <%=@vitrine.marketing.slogan %></p>
      <ul>
        <% cache"vitrine_info_box" do %>

        <li>
          <%= content_tag(:span, nil, :class =>"sprite-icons-location") %>
          <% if @vitrine.user.city%>

          <span>
            <%= @vitrine.user.city.name %>,</span>
          <% end %>

          <% if @vitrine.user.state %>
          <b>
            <%= @vitrine.user.state.code %>
          </b>
          <% end %>

        </li>
        <li>
          <% if @vitrine.feedbacks %>
          <%= content_tag(:span, nil, :class =>"sprite-icons-small_star") %>

          <div><%=@total_from_buyers %></div>
          <% end %>

        </li>

        <li>
          <%= content_tag(:span, nil, :class =>"sprite-icons-small_avatar") %>
          <%=link_to @vitrine.user.name, user_path(@vitrine.user) %>
        </li>

        <li>
          <% if @vitrine.marketing.url%>
          <%=link_to  "#{@vitrine.marketing.url}", url_with_protocol(@vitrine.marketing.url), :target => '_blank' %>
          <% end %>

        </li>

        <% end %>

        <li>
          <% if @vitrine.user.online? == true %>
          <span class="status_online">
            Online
          </span>
          <% else %>
          <span class="status_offline">
            Offline
          </span>
          <% end %>
        </li>




        <li>
        <% if current_user  %>
               
               
             <% if  current_user.voted_as_when_voted_for @vitrine %>
             <%= link_to "Descutir", dislike_vitrine_path(@vitrine, type: "down"), method: "put" %>
           <% else %>
             
           <%= link_to "Curtir",  like_vitrine_path(@vitrine, type: "up"), method: "put" %>

  <% end %>
  <% end %>


  <li>Criada em: <%= timeago_tag(@vitrine.created_at, :nojs => true, :date_only => true)  %></li>
     
      
      
      
      <li>
          Compartilhe:<%= social_share_button_tag(truncate(@vitrine.user.name, :length => 20), :url => url_for(:action => :show, :id => @vitrine.user.id, :only_path => false))  %>
        </li>
      
      </ul>
    </div>

  </div>
</div>

<div class="box3">
  <div class="block">

    <%= bettertabs :simpletabs do |tab| %>
    <%= tab.link :vitrine_show, 'Resumo' do %>
    <%= render 'vitrine_show' %>
    <% end %>
    <%= tab.link :products, "#{pluralize(@vitrine.products.size, "Produtos") }"  do %>
    <%=render 'products' %>
    <% end %>

    <%= tab.link :feedbacks, "#{pluralize(@vitrine.feedbacks.size, "Avaliações") }"  do %>
    <%= render 'feedbacks' %>
    <% end %>

    <%= tab.link :about, 'Sobre' do %>
    <%=render 'about' %>
    <% end %>
    <%= tab.link :message, 'Mensagem' do %>
    <%=render 'message_box' %>
    <% end %>

   
    <% end %>
  </div>

</div>

<div class="box11">
<div class="subcontent">
  <h2>Estilos
   </h2>
  <span class="link_tag">

    <ul>

      <% @vitrine.tag_list.each do |tag| %>
        <li>
          <%= raw link_to tag.name, tags_path(:tag => tag.name, :vitrine => @vitrine.id) %>
        </li>

    <% end %>
    </ul>
  </span>
  </div>

</div>
<div class="box11">
  <% unless @vitrine.user.city.blank? %>
  <%=image_tag "http://maps.google.com/maps/api/staticmap?size=190x400&sensor=false&zoom=16&markers=#{@vitrine.address}" %>
  <% end %>
</div>
</div>
