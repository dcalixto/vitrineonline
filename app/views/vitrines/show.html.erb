<% title  @vitrine.name %>
<div class="box1">


    <div class="block">
          <div class="content">
              <div class="subcontent_top">
    <% breadcrumb :vitrine, @vitrine %>
    <%= render 'shared/flash_messages' %>
    <%= render 'announcements/announcement_for_all' %>
  </div>
</div>
</div>
</div>

<div class="box10">

  <div class="block">
      <div class="square_box">
        <h4>Vitrine</h4>
    <div class="subcontent">
      <%=link_to(image_tag(@vitrine.logo.url(:thumb).to_s), vitrine_path(@vitrine)) %>
      <ul class="list">
        <li>
  <%= content_tag(:span, nil, :class =>"sprite-icons-small_vitrine") %>
          <%=link_to vitrine_path(@vitrine) do %>
          <%=@vitrine.name %>
          <% end %>

        </li>
        <li>
          <%= content_tag(:span, nil, :class =>"sprite-icons-location") %>
          <% if @vitrine.user.city%>

          <span>
            <%= @vitrine.user.city.name %>,</span>
          <% end %>

          <% if @vitrine.user.state %>
          <b>
            <%= @vitrine.user.state.code %>
          </b>
          <% end %>

        </li>
        <li>
          <% if @vitrine.feedbacks %>
  <%= content_tag(:span, nil, :class =>"sprite-icons-small_star") %>
          <%=link_to  search_feedbacks_vitrines_path(:id=>@vitrine.id)  do %>

          <div><%=@total_from_buyers %></div>
          <% end %>
          <% end %>
        </li>

        <li>
<%= content_tag(:span, nil, :class =>"sprite-icons-small_avatar") %>
           <%=link_to @vitrine.user.name, user_path(@vitrine.user) %>
        </li>

<li>
  <% if @vitrine.marketing.url%>
<%=link_to  "#{@vitrine.marketing.url}", url_with_protocol(@vitrine.marketing.url), :target => '_blank' %>
<% end %>
</li>




<li>


 <%= pluralize vitrine.reputation_for(:votes).to_i, "Curtida" %>
  <% if current_user && !current_user.voted_for?(@vitrine) %>



<% else %>
    <%= link_to "Curtir", vote_vitrine_path(@vitrine, type: "Curtir"), method: "post" %>
  <% end %>

</li>











        <li>
        <%= social_share_button_tag(truncate(@vitrine.user.name, :length => 20), :url => url_for(:action => :show, :id => @vitrine.user.id, :only_path => false))  %>
</li>

      <li> <% if @vitrine.user.online? == true %>
        <span class="status_online"> Online </span>
        <% else %>
          <span class="status_offline"> Offline </span>
          <% end %>
      </li>
      <%=link_to "Enviar Mensagem", message_box_vitrine_path, :class=>"message_box" %>
</ul>
    </div>
  </div>
</div>
</div>
<div class="box4">
  <!-- Slideshow 1 -->
  <div class="block">
    <div class="content">
      <%if @vitrine.banners.present? %>
  <ul class="box-slider">
  <% @vitrine.banners.last(3).each do |i| %>
<li> <%= image_tag(i.img.url(:thumb).to_s) %></li>
<% end %>
</ul>
<% end %>
</div>
</div>
</div>
<div class="box1">
  <div class="block">
      <div class="content">
          <div class="subcontent_top">
    <h2>Sobre a <%=@vitrine.name %></h2>


  <div class="vitrine_about">

      <p><%= markdown(@vitrine.about) %></p>
    </div>
  </div>

</div>


          <div class="subcontent">
  <h2>Estilos e Categorias da <%=@vitrine.name %></h2>
  <span class="tags">

    <% @vitrine.products.each do |tag| %>
    <%= raw tag.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
  <% end %>
    <% @vitrine.tag_list.each do |tag| %>
    <%= raw link_to tag.name, tags_path(:tag => tag.name, :vitrine => @vitrine.id) %>

    <% end %>


</div>

  <div class="subcontent">
    <h2>Produtos Similares aos da <%= @vitrine.name %></h2>
    <%  @similarities.each do |item| %>
    <%= link_to product_path(item) do  %>
    <%= image_tag item.f1.url(:small).to_s %>
    <%= item.name %>
    <%= item.price %>
    <% end %>
    <% end %>


</div>







    <div class="subcontent">
  <h2>Produtos Adicionados recentemente pela <%=@vitrine.name %></h2>
      <table class="block_search">
        <tr>
          <td>

            <%= search_form_for @q, url: "/vitrines/#{@vitrine.id}/vitrine_products", method: :post  do |f| %>

            <%= f.text_field :id_cont %>
            <%= f.submit "Buscar", :class=>"btn_grey" %>

            <% end %>
          </td>
          <td class="sort">

            Ordernar por
            <%= sort_link @q, :price, "Preço" %>
            |
            <%= sort_link @q, :feedback_stars_rating, "Avaliação" %>
          </td>
        </tr>
      </table>


  <p>Total
    <%= @vitrine.products.count %>
    Produtos</p>


      <div id="searchResults">

        <table class="product_table">
        	<tbody>
        		<tr>
<td>



        <%= render :partial => 'vitrines/product', :collection => @products%>
</td>

</tr>
</tbody>
</table>
      </div>

      <div class="block_pagination">
        <div class="digg_pagination">
          <%= will_paginate @products,:container => false, previous_label: h('« Voltar'), next_label: h('Próximo »'),:page_gap => t("......"), :inner_window => 1, :outer_window => 1 %>

        </div>
      </div>

  </div>






      <div class="subcontent">
        <h2>Avaliações recebidas recentemente
        </h2>
        <table class="block_search">
          <tr>
            <td>

              <%= search_form_for @q, url: "/vitrines/#{@vitrine.id}/vitrine_feedbacks", method: :post  do |f| %>

              <%= f.text_field :id_cont %>
              <%= f.submit "Buscar", :class=>"btn_grey" %>

              <% end %>
            </td>
            <td class="sort">

              Ordenar por
              <%= sort_link @q, :created_at, "Data" %>
              |
              <%= sort_link @q, :feedback_stars_rating, "Avaliação" %>
            </td>
          </tr>
        </table>

        <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>
        <%= render :partial => 'feedbacks/feedbacks' %>
      </div>


      <div class="subcontent">
        <h2>Formas de Pagamentos disponível</h2>
        <%= content_tag(:span, nil, :class => 'sprite-icons-paypal-icon') %>
        <% unless @vitrine.policy.blank? %>
      </div>

      <div class="subcontent">

        <h2>Formas de Envio disponível</h2>

        <ul>

          <li>
            <%= content_tag(:span, nil, :class => 'sprite-icons-shipping') %>
          </li>

          <% @vitrine.policy.shippings.each do |shipping| %>
          <li>
            <b><%= shipping.kind %></b>
          </li>
          <% end %>
        </ul>

      </div>

      <div class="subcontent">
        <h2>Garantias Oferecidas pelo Vendedor</h2>
        <p><%= markdown(@vitrine.policy.guarantee) %></p>
        <% end %>
        <% unless @vitrine.policy.shippings.blank? %>
        <b>Formas de Envio</b>
        <ul>
          <% @vitrine.policy.shippings.each do |shipping| %>
          <li><%= shipping.kind %></li>
          <% end %>
        </ul>
        <% end %>
      </div>




                  <div class="subcontent">
                <h2>Veja Também</h2>


                  <ul class="content-slider">

                        <% @suggestions.each do |item| %>
                          <li>
                        <%= link_to product_path(item) do  %>
                        <%= image_tag item.f1.url(:thumb).to_s %>
                        <%= item.name %>
                          <%= item.price %>
                        <% end %>
                        </li>
                        <% end %>
              </ul>


            </div>
    </div>
  </div>

</div>
