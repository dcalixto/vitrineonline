




<div class="content">

  <table class="blank_table">
    <tr>

         <td>
        <b>Vitrine Criada em:</b>
        <span class="lista-time">
          <%= timeago_tag(@vitrine.created_at, :nojs => true, :date_only => false)%>

        </span>
         </td>
            <td>

        <b>Média de Avaliações</b><div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

      </td>

    </tr>
  </table>


  <table class="block_search">
    <tr>
         <%= search_form_for @q, url: search_feedbacks_vitrines_path, method: :post  do |f| %>
      <td>

     

        <%= f.text_field :buyer_comment_cont %>
          </td>

         <td>

          <%= f.submit "Buscar", :class=>"btn_grey" %>

     
      </td>
      <td>

        <%= render :partial => 'shared/sort_feedback'%>
      </td>
         <% end %>

    </tr>
  </table>

  <%= render :partial => 'feedbacks/feedbacks' %>


  <%= render :partial => 'shared/feedback_pagination'%>
</div>



