<% title  "Configurar vitrine" %>
<%= render "shared/vitrine_menu" %>
<div class="box5">
  <div class="flash_box">
  <%= render 'shared/flash_messages' %>
  <%= render 'shared/error_messages', :target => @vitrine  %>
</div>

  <div class="block  margin_top">

    <h1>Configuração</h1>


    <div class="content">



      <div class="subcontent_top" >

        <h4>
          <%= link_to @vitrine.user.name, vitrine_path(current_vitrine) %></h4>
        <%= form_for @vitrine, :url => vitrine_path(current_vitrine), :method => :put,  :html => {:multipart => true} do |logo| %>
        <%= image_tag current_vitrine.logo.url(:thumb).to_s %>
        <ul class="image_info">
          <li>
            <div id="upload-logo-container"></div>
          </li>
          <li class="tip">JPG, GIF ou PNG, tamanho máximo: 2MB</li>
          <li class="tip">O logo será redimencionanda para 245 x 135 de altura</li>
        </ul>

      <%= logo.button "Salvar", :class => 'btn' %>
      <% end %>
    </div>




    <div class="subcontent">
        <h4>Banner 1</h4>
      <%= form_for @vitrine, :url => vitrine_path(current_vitrine), :method => :put,  :html => {:multipart => true} do |b1| %>
      <ul>
        <li>
          <%= image_tag @vitrine.b1.url(:small).to_s %></li>
        </ul>
        <ul class="image_info">
          <li>
            <div id="upload-b1-container"></div>
          </li>
        </ul>
        <%= b1.button "Salvar", :class => 'btn' %>
        <% end %>
      </div>




      <div class="subcontent">
          <h4>Banner 2</h4>
        <%= form_for @vitrine, :url => vitrine_path, :method => :put,  :html => {:multipart => true} do |b2| %>
        <ul>
          <li>
            <%= image_tag @vitrine.b2.url(:small).to_s %></li>
          </ul>
          <ul class="image_info">
            <li>
              <div id="upload-b2-container"></div>
            </li>
          </ul>
          <%= b2.button "Salvar", :class => 'btn' %>
          <% end %>
        </div>


      <div class="subcontent">
        <h4>Banner 3</h4>

          <%= form_for @vitrine, :url => vitrine_path, :method => :put,  :html => {:multipart => true} do |b3| %>
          <ul>
            <li>
              <%= image_tag @vitrine.b3.url(:small).to_s %></li>
            </ul>
            <ul class="image_info">
              <li>
                <div id="upload-b3-container"></div>
              </li>
            </ul>
            <%= b3.button "Salvar", :class => 'btn' %>
            <% end %>
          </div>

    </div>



<div class="subcontent">
    <h4>Sobre</h4>

          <%= form_for @vitrine, :url => vitrine_path, :method => :put do |a| %>

    <p class="tip">Descreva sua vitrine</p>

      <div id="notes-bar"></div>
      <%= a.text_area :about, :id => "notes", :placeholder => "Sobre"%>
      <div id="notes-preview"></div>
      <%= a.submit "Salvar", :class => 'btn' %>
  <% end %>

  </div>








        </div>
                </div>
      <div class="box11">

        <div class="tip_box">
          <h4>Endereço</h4>
          <h4><%= current_vitrine.name %></h4>
          <ul>
            <li>
              <%=  current_user.address %>
            </li>
            <li>
              <%= current_user.neighborhood %>
            </li>
            <li>
              <%= current_user.postal_code %>
            <li>
              <% unless current_user.city.blank? %>
            <li><%=  current_user.city.name %>
            </li>
            <% end %>
            <% unless current_user.state.blank? %>
            <li><%= current_user.state.name %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
