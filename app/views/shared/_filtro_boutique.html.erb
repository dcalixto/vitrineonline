          <% end %>
            </div>





            <h2><b>Filtrar por</b></h2>

  <div class="filtro">
   
    <ul>
      <% @boutiques.facets['kind']['terms'].each do |facet| %>
        <li>
          <%= link_to_unless_current BoutiqueKind.find(facet['term']).kind, params.merge({(controller.controller_name == BoutiqueKindsController.controller_name ? :id: :kind_id) => facet['term']}) %> <%= facet['count'] %>
          <% if params[:kind_id] == facet['term'].to_s %>
          <% end %>
        </li>
      <% end %>
    </ul>
