 <div id="boutique-busca">

   <h2><b>Buscar</b></h2>

  <%= form_tag boutiques_path, method: :get, :id => "search_box_filter" do %>

     <div class="wrapper">

            <%= search_field_tag :query, params[:query],  :class =>"busca" %><%= button_tag "", :class =>"search_btn_filter", :name => nil %>
         
