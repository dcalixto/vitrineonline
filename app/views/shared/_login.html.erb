<div class="box11">
  <%= render 'shared/flash_messages' %>

  <div id="home_login">

    <div class="block margin_top home_login">

      <h4>Entrar</h4>
      <div class="content_empty">

        <%= form_tag  sessions_path, :class => 'formtastic', :method => :post  do |f| %>
        <fieldset class="inputs">
          <ol>

            <li >
              <%= email_field_tag :email, params[:email] %></li>
            <li class="space"></li>

            <li >
              <%= password_field_tag :password, params[:password]%></li>

            <li><%= link_to "Esqueceu a senha?", new_password_reset_path %></li>
            <li>
              <label clas="label">Lembrar-me<%= check_box_tag :remember_me, 1, params[:remember_me]%></label>
            </li>

            <li><%= submit_tag "Entrar",  :class => "btn btn_big" %></li>
          </ol>
        </fieldset>
        <% end %>
      </div>
    </div>
  </div>

</div>
