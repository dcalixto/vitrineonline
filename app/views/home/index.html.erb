    <ul class="content-slider">
        <#% @products.each do |product| %>
        <li>
      <#%= link_to product_path(product) do  %>
      <%#= image_tag product.images.first.url(:foto_thumb).to_s %>
      <#%= product.name %>

      <#% end %>.
    </li>
    </ul>
<#% end %>.
  </div>
<#% end %>.
</div>



<div class="box1">
  <h2>Vitrines Mais Avaliadas</h2>
  <% unless Vitrine.nil? %>
  <div class="block">
    <ul class="content-slider">
      <% Vitrine.order.each do |vitrine| %>
<li>
    <%=   link_to vitrine_path(vitrine) do %>

  <%= image_tag vitrine.logo.url(:thumb).to_s %>

      <%= vitrine.name %>

</li>
      <% end %>
    </ul>
      <% end %>
  </div>
  <% end %>
