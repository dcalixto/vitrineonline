<div class="box1">
<div class="block">
  <h2>Produtos Adicionados Recentemente</h2>

  <div id="searchResults">
<% if @products %>
    <%= render :partial => 'product', :collection => @products  %>
    <% end %>
  </div>
</div>
</div>



<div class="box1">
  <div class="block">
    <h2>Produtos em Destaque</h2>


