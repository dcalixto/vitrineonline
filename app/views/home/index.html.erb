

<div class="box1">
  <div class="margin_top">
    <div class="flash_box">
      <%= render 'shared/flash_messages' %>

    </div>

    <!-- Slideshow 1 -->
    <ul class="box-slider">
      <li>
        <%= image_tag('slider1.jpg')  %>
      </li>
      <li><%= image_tag('slider4.jpg')  %></li>
      <li><%= image_tag('slider3.jpg')  %></li>
    </ul>


  </div>
</div>

<div class="box1">

  <h2>Produtos Mais Vendidos</h2>
  <% if @orderables %>
  <div class="block">

    <ul class="content-slider">
         <% orderable.limit(10).each do |p| %>
        <li>
      <%= link_to product_path(p) do  %>
      <%= image_tag p.images.first.url(:thumb).to_s %>
      <%= p.name %>

      <% end %>.
    </li>
    </ul>
<% end %>.
  </div>
<% end %>.
</div>




<div class="box1">
  <h2>Produtos Mais Avaliadas</h2>
  <% unless Product.nil? %>
  <div class="block">
    <ul class="content-slider">

      <% @feedbacks.includes(:products).limit(10).each do |v| %>


      <li> <%= image_tag v.images.first.url(:thumb).to_s %></li>
      <li><%= v.name   %></li>
  <% end %>
</ul>

  </div>
  <% end %>
</div>





<div class="box1">
