

<div class="box1">
  <div class="block">
      <div class="content">
    <div class="flash_box">
      <%= render 'shared/flash_messages' %>

    </div>



      <div class="subcontent_top">
    <!-- Slideshow 1 -->




          <div class="slider">

    <ul>
      <li>
        <%= image_tag('slider1.jpg')  %>
      </li>
      <li><%= image_tag('slider4.jpg')  %></li>
      <li><%= image_tag('slider3.jpg')  %></li>
    </ul>


    </div>
</div>
</div>

  <div class="subcontent_top">

    <h2>Produtos Mais Vendidos</h2>


    <a href="#" class="prev">&lsaquo;</a>
          <div class="carousel">

    <% if @orderables %>
    <ul>
         <% orderable.limit(10).each do |p| %>
        <li>
      <%= link_to product_path(p) do  %>

        <% if p.images.present? %>
      <%= image_tag p.images.first.ifoto.url(:thumb).to_s %>
      <% end %>
      <%= p.name %>
      <% end %>.
    </li>
    </ul>
<% end %>.
<% end %>.
<a href="#" class="next">&rsaquo;</a>
     <div class="clear"></div>
</div>
</div>




  <div class="subcontent">
  <h2>Produtos Mais Avaliadas</h2>


      <a href="#" class="prev">&lsaquo;</a>
            <div class="carousel">

  <% unless Product.nil? %>

    <ul>

      <% @feedbacks.includes(:products).limit(10).each do |v| %>


      <li> <%= image_tag v.images.first.ifoto.url(:thumb).to_s %></li>
      <li><%= v.name   %></li>
  <% end %>
</ul>
  <% end %>

  <a href="#" class="next">&rsaquo;</a>
       <div class="clear"></div>
</div>
</div>




  <div class="subcontent">
  <h2>Vitrines Mais Avaliadas</h2>


  <a href="#" class="prev">&lsaquo;</a>
        <div class="carousel">

  <% unless Vitrine.nil? %>

    <ul class="content-slider">

      <% @feedbacks.includes(:vitrines).limit(10).each do |v| %>


      <li> <%= image_tag v.logo.url(:thumb).to_s %></li>
      <li><%= v.name   %></li>
  <% end %>
</ul>
  <% end %>

  <a href="#" class="next">&rsaquo;</a>
       <div class="clear"></div>
</div>
</div>


  <div class="subcontent">
  <h2>Produtos Adicionados Recentemente</h2>


  <a href="#" class="prev">&lsaquo;</a>
        <div class="carousel">

<% if @products %>
<ul class="content-slider">
<% @products.first(10).each do |p| %>
<li>
<%= link_to product_path(p) do  %>
<% if p.images.present? %>
<%= image_tag p.images.first.ifoto.url(:thumb).to_s %>
<% end %>
<%= p.name %>
<%= p.price %>
<% end %>
</li>
<% end %>
</ul>

<% end %>
<a href="#" class="next">&rsaquo;</a>
     <div class="clear"></div>
</div>
</div>



  <div class="subcontent">
    <h2>Produtos em Destaque</h2>


      <ul class="content-slider">

            <% @suggestions.each do |item| %>
              <li>
            <%= link_to product_path(item) do  %>
            <%= image_tag item.images.first.ifoto.url(:thumb).to_s %>
            <%= item.name %>
              <%= item.price %>
            <% end %>
            </li>
            <% end %>
  </ul>




  </div>


</div>
</div>
</div>
