  <div class="content">
    <h2>Seções
    </h2>
    <div class="tags">

      <ul class="link_tag">
        <% tag_cloud Product.tag_counts, %w[s m l] do |tag, css_class| %>
          <li >

            <%= raw link_to tag.name, tag_path(:tag => tag.name), class: css_class %>
          </li>


        <% end %>
      </ul>
      ... </div>

  </div>
</div>
