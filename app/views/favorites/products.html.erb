
<% title "Favoritos" %>
<%= render "shared/favorites_menu" %>
<!--STOCK OF ITEMS  -->
<div class="box3">
  <div class="flash_box">
    <%= render 'shared/flash_messages' %>
  </div>

  <div class="block margin_top">
    <h1>Produtos adicionados</h1>



    <div class="content">
        <%= current_user.favorite_products.count %>
        Produtos favoritados</h4>
      <table class="block_search">
        <tr>
          <td>

           <%= search_form_for @q, url:  search_favorites_favorites_path, method: :post  do |f| %>

            <%= f.text_field :id_cont %>
            <%= f.submit "Buscar", :class=>"btn_grey" %>

            <% end %>
          </td>
          <td class="sort">

            Ordernar Por
            <%= sort_link @q, :price,  "Preço" %>
            |
            <%= sort_link @q, :created_at, "Data" %>
            |
            <%= sort_link @q, :quantity, "Quantidade" %>

          </td>
        </tr>
      </table>

      <table class="zebra_branca margin_top" id="stock_vitrine">

        <thead>
          <tr class="header">
            <th scope="col">Produto</th>
            <th scope="col">Código</th>
            <th scope="col">Preço</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Avaliação</th>
            <th scope="col">Postado em</th>
            <th scope="col">Remover</th>

          </tr>
        </thead>

        <tbody>

 <% @favorite_products.each do |product| %>
<tr>
  <td class="stock_td">
    <%= link_to  product_path(product.id) do %>
    <%= image_tag product.f1.url(:small).to_s %>
    <%=  product.name %>
    <% end %>
  </td>

  <td><%= product.id %></td>
  <td class="lista-preco_stock">
    <span>
      <b><%=  number_to_currency(product.price, :unit => "R$") %></b>
    </span>
  </td>


  <td>
      <%= select_tag  :quantity, options_for_select((1..product.quantity).collect{ |q| [q, q]}) %>

  </td>
  <td>
      <% if product.feedbacks %>
            <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

            <%= @total_feedbacks %>
            <% end %>

  </td>
  <td>
    <%= timeago_tag(product.created_at, :nojs => true, :date_only => false)%>

  </td>


  <td>
       <%= button_to "Remover", unmark_product_favorite_path(product.id), method: :get, :class=>"btn_red btn_small" %>

     </td>

</tr>
 <% end %>

        </tbody>
      </table>

    </div>

    <div class="block_pagination">
      <hr class="line"></hr>
      <div class="digg_pagination">
        <%= will_paginate @favorite_products,:container => false, previous_label: h('« Voltar'), next_label: h('Próximo »'),:page_gap => t("......"), :inner_window => 1, :outer_window => 1 %>

      </div>
    </div>
</div>

</div>
