<% title "Favoritos" %>
<%= render "shared/favorites_menu" %>
<!--STOCK OF ITEMS  -->
<div class="box3">
  <div class="flash_box">
    <%= render 'shared/flash_messages' %>
  </div>

  <div class="block margin_top">
    <h1>Vitrines adicionadas</h1>

    <div class="content">
      <%= current_user.find_liked_items.count %>
      vitrines curtidas</h4>
    <table class="block_search">
      <tr>
        <td>

          <#%= search_form_for @q, url:  vitrines_favorites_path, method: :post  do |f| %>

          <#%= f.text_field :id_cont %>
          <#%= f.submit "Buscar", :class=>"btn_grey" %>

          <#% end %>
        </td>
        <td class="sort">

          Ordernar Por
          <#%= sort_link @q, :created_at, "Data" %>

        </td>
      </tr>
    </table>

    <table class="zebra_branca margin_top" id="stock_vitrine">

      <thead>
        <tr class="header">
          <th scope="col">Vitrine</th>
          <th scope="col">Avaliação</th>

          <th scope="col">Remover</th>

        </tr>
      </thead>

      <tbody>

        <% @user_likes.each do |vitrine| %>
        <tr>
          <td class="stock_td">
            <%= link_to  vitrine_path(vitrine.id) do %>
            <%= image_tag vitrine.logo.url(:thumb).to_s %>

            <% end %>
          </td>

          <td>
            <% if vitrine.feedbacks %>
            <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

            <%= @total_feedbacks %>
            <% end %>

          </td>

          <td>



          <%= link_to "Descurtir",  dislike_vitrine_path(vitrine.id), method: :put %>

          </td>

        </tr>
        <% end %>

      </tbody>
    </table>

  </div>

  <div class="block_pagination">
    <hr class="line"></hr>
    <div class="digg_pagination">
      <%= will_paginate  @user_likes,:container => false, previous_label: h('« Voltar'), next_label: h('Próximo »'),:page_gap => t("......"), :inner_window => 1, :outer_window => 1 %>

    </div>
  </div>
</div>

</div>
