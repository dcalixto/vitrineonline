<% title "Recuperar Password" %>
<!-- Recuperar Senha  -->



<div class="box3">
  <%= render 'shared/flash_messages' %>
  <div class="block margin_top">

  <div class="square_box">
    <h1>Recuperar Senha</h1>

    <div class="content">
      Coloque seu email e n√≥s lhe enviaremos um link para fazer uma nova senha

      <%= form_tag password_resets_path, :method => :post do %>

      <%= label_tag :email, "Email", :class=>"label" %>
      <%= email_field_tag :email, params[:email], :id => "UserEmail" %>
      <%= submit_tag "Enviar", :class => "btn" %>
      <% end %>
    </div>
  </div>
  </div>
</div>
