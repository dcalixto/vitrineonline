<% title "Ranking" %>

<!--STOCK OF ITEMS  -->
<div class="box3">

  <div class="block margin_top">
    <h1>Vitrines Curtidas</h1>

    <div class="content">


    <table class="zebra_branca margin_top">

      <thead>
        <tr >
          <th scope="col">Vitrine</th>
          <th scope="col">Avaliação</th>

          <th scope="col">Curtidas</th>

        </tr>
      </thead>

      <tbody>

        <% @vitrines.each do |vitrine| %>
        <tr>
          <td >
            <%= link_to  vitrine_path(vitrine.id) do %>
            <%= image_tag vitrine.logo.url(:mobile).to_s %>
<%= vitrine.name %>
            <% end %>
          </td>

          <td>
            <% if vitrine.feedbacks %>
            <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

            <%= @total_feedbacks %>
            <% end %>

          </td>

          <td>






<%= vitrine.reputation_for(:votes).to_i %>






          </td>

        </tr>
        <% end %>

      </tbody>
    </table>

  </div>

</div>

</div>
















<!--STOCK OF ITEMS  -->
<div class="box3">

  <div class="block margin_top">
    <h1>Produtos Curtidos</h1>



    <div class="content">


      <table class="zebra_branca margin_top" id="stock_vitrine">

        <thead>
          <tr class="header">
            <th scope="col">Produto</th>
            <th scope="col">Código</th>


            <th scope="col">Avaliação</th>

    <th scope="col">Curtidas</th>
          </tr>
        </thead>

        <tbody>

  <% @products.each do |product| %>
<tr>
  <td class="stock_td">
    <%= link_to  product_path(product.id) do %>
    <#%= image_tag product.images.first.url(:small).to_s %>
    <%=  product.name %>
    <% end %>
  </td>

  <td><%= product.id %></td>


  <td>
      <% if product.feedbacks %>
            <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

            <%= @total_feedbacks %>
            <% end %>

  </td>

  <td>

  <%= product.reputation_for(:votes).to_i %>
  </td>




</tr>
 <% end %>

        </tbody>
      </table>

    </div>


</div>

</div>
