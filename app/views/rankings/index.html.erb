<% title "Ranking" %>

<!--STOCK OF ITEMS  -->
<div class="box6">

  <div class="block margin_top">
    <h1>Vitrines Curtidas</h1>

    <div class="content">


    <table class="zebra_branca margin_top">

    

      <tbody>
 <% if @vitrines %>
        <% @vitrines.each do |vitrine| %>
        <tr>
          <td >
            <%= link_to  vitrine_path(vitrine.id) do %>
            <%= image_tag vitrine.logo.url(:mobile).to_s %>
<%= vitrine.name %>
            <% end %>
            
              <% if vitrine.feedbacks %>
            <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

            <%= @total_feedbacks %>
            <% end %>
<%= vitrine.votes_for.size%>

            
            </td>

         
        
        </tr>
        <% end %>
 <% end %>

      </tbody>
    </table>

  </div>

</div>

</div>
















<!--STOCK OF ITEMS  -->
<div class="box6">

  <div class="block margin_top">
    <h1>Produtos Curtidos</h1>



    <div class="content">


      <table class="zebra_branca margin_top" id="stock_vitrine">

       

        <tbody>
<% if @products %>

  <% @products.each do |product| %>
<tr>
  <td class="stock_td">
  <%= link_to  product_path(product.id) do %>
      <% if product.images.present?%>

             <%= image_tag product.images.first.ifoto.url(:small).to_s %>
             <% end %>

    <%=  product.name %>
    <% end %>

        <% if product.feedbacks %>
            <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

            <%= @total_feedbacks %>
            <% end %>
 <%= product.votes_for.size%>

  
  </td>

 



</tr>
 <% end %>
<% end %>

        </tbody>
      </table>

    </div>


</div>

</div>
