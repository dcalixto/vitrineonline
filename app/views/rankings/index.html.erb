<% title "Ranking" %>

<!--STOCK OF ITEMS  -->
<div class="box6">

  <div class="block margin_top">
    <h1>Vitrines mais Curtidas</h1>

    <div class="content">


    <table class="zebra_branca margin_top">

    

      <tbody>
 <% if @vitrines %>
        <% Vitrine.order(:cached_votes_up).take(50).each do |vitrine, i| %>
          <tr>

            <td> <%= i %></td>

          <td >
            <%= link_to  vitrine_path(vitrine.id) do %>
            <%= image_tag vitrine.logo.url(:mobile).to_s %>
<%= vitrine.name %>
            <% end %>
            
         

            
            </td>

         
        
        </tr>
        <% end %>
 <% end %>

      </tbody>
    </table>

  </div>

</div>

</div>

