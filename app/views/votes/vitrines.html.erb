<% title "Favoritos" %>
<%= render "shared/favorites_menu" %>
<!--STOCK OF ITEMS  -->
<div class="box3">
  <div class="flash_box">
    <%= render 'shared/flash_messages' %>
  </div>

  <div class="block margin_top">
    <h1>Vitrines Curtidas</h1>

    <div class="content">

      Vitrines curtidas

  <% @vitrines.each do |vitrine| %>
<%= vitrine.reputation_for(:votes).to_i %>
<% end %>

    <table class="zebra_branca margin_top" id="stock_vitrine">

      <thead>
        <tr class="header">
          <th scope="col">Vitrine</th>
          <th scope="col">Avaliação</th>

          <th scope="col">Remover</th>

        </tr>
      </thead>

      <tbody>

        <% @vitrines.each do |vitrine| %>
        <tr>
          <td class="stock_td">
            <%= link_to  vitrine_path(vitrine.id) do %>
            <%= image_tag vitrine.logo.url(:mobile).to_s %>
<%= vitrine.name %>
            <% end %>
          </td>

          <td>
            <% if vitrine.feedbacks %>
            <div class="feedback_stars_rating" data-read-only="true" data-score="<%= @average_rating_from_buyers %>"></div>

            <%= @total_feedbacks %>
            <% end %>

          </td>

          <td>






                <%= link_to "Descurtir", vote_vitrine_path(vitrine, type: "Descurtir"), method: "post" %>





           </li>

          </td>

        </tr>
        <% end %>

      </tbody>
    </table>

  </div>

  <div class="block_pagination">
    <hr class="line"></hr>
    <div class="digg_pagination">
      <%= will_paginate  @vitrines,:container => false, previous_label: h('« Voltar'), next_label: h('Próximo »'),:page_gap => t("......"), :inner_window => 1, :outer_window => 1 %>

    </div>
  </div>
</div>

</div>
